<h1>Login</h1>

<%= form_with url: author_sessions_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br />
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br />
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>

<%= link_to "Back", articles_path %>
